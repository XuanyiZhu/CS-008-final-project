    if ($email == "") {
        $errorMsg[] = "Please enter your email address";
        $emailERROR = true;
    } elseif (!verifyEmail($email)) {
        $errorMsg[] = "Your email address appears to be incorrect.";
        $emailERROR = true;
    }

    if ($senior == "0" && $uvmstudent == "0" && $adult == "0") {
        $errorMsg[] = "please select at least one ticket";
        $ticketERROR = true;
