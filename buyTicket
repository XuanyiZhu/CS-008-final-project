    $_SESSION["showId" . $_SESSION["j"]] = $showId;
    $_SESSION["email" . $_SESSION["j"]] = $email;
    $time = htmlentities($_POST["radTime"], ENT_QUOTES, "UTF-8");
    $_SESSION["time" . $_SESSION["j"]] = $time;
